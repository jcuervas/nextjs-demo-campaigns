    "date-fns": "2.28.0",
    "firebase-admin": "9.12.0",
    "firebase-functions": "3.19.0",
    "firebase-tools": "9.23.3",
    "html-react-parser": "1.4.9",
    "next": "12.1.1",
    "next-i18next": "10.5.0",
    "qrcode": "1.5.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-hook-form": "7.28.1",
